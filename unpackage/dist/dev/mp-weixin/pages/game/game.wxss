.content {
  position: absolute;
  background-image: url(https://i.loli.net/2020/11/06/W6XJaI7SfxbR8Vc.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  padding: 20rpx 50rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .head {
  width: 100%;
  height: 40rpx;
  position: relative;
}
.content .head .tips {
  width: 20%;
  height: 100%;
  border-bottom: 1px solid #b18733;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  color: #FFFFFF;
  text-align: center;
  letter-spacing: 4rpx;
  font-size: 28rpx;
  position: absolute;
  right: 0;
}
.content .banner {
  width: 100%;
  height: 320rpx;
  border: 1px solid #b18733;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin: 20rpx 0;
  position: relative;
}
.content .banner image {
  width: 100%;
  height: 100%;
}
.content .banner .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.content .banner .mask .mask_item {
  width: 50%;
  height: 50%;
  background-color: #000;
  position: absolute;
}
.content .banner .mask .left_top {
  left: 0;
  top: 0;
}
.content .banner .mask .right_top {
  right: 0;
  top: 0;
}
.content .banner .mask .left_bottom {
  left: 0;
  bottom: 0;
}
.content .banner .mask .right_bottom {
  right: 0;
  bottom: 0;
}
.content .banner .mask .display {
  display: none;
}
.content .audioBox {
  width: 100%;
  height: 150rpx;
  background-color: #FFFFFF;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
  margin: 20rpx auto;
  padding: 20rpx 50rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .audioBox .progress_bar_box {
  width: 100%;
  height: 35%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .audioBox .progress_bar_box .progress_bar {
  width: 100%;
  height: 5rpx;
  background-color: #d8d8d8;
  -webkit-border-radius: 2rpx;
          border-radius: 2rpx;
}
.content .audioBox .progress_bar_box .progress_bar .schedule {
  height: 100%;
  background-color: #1890ff;
  -webkit-border-radius: 2rpx;
          border-radius: 2rpx;
}
.content .audioBox .onplay_box {
  width: 100%;
  height: 65%;
  text-align: center;
}
.content .audioBox .onplay_box .iconfont {
  color: #1890ff;
  font-size: 80rpx;
}
.content .main {
  width: 100%;
  height: 60rpx;
}
.content .main input {
  width: 100%;
  height: 100%;
  border: 1rpx solid #999999;
  text-align: center;
  color: #FFFFFF;
}

