.start {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #000000;
}
.start .start-content {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.start .start-content .start-the {
  width: 100%;
  height: 100%;
  position: absolute;
  top: -14rpx;
}
.start .start-content .start-box {
  position: absolute;
  width: 100%;
  height: auto;
  top: 70%;
  -webkit-transform: translate(0, -70%);
          transform: translate(0, -70%);
}
.start .start-content .start-box .start-content-img {
  width: 60%;
  height: 120rpx;
  display: block;
}
.start .start-content .start-box .start-content-text {
  width: 250rpx;
  height: auto;
  margin-left: 200rpx;
  position: absolute;
  top: 80rpx;
  -webkit-background-clip: text;
  color: transparent;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#dbfde5), to(#a8b8fa));
  background-image: -webkit-linear-gradient(#dbfde5, #a8b8fa);
  background-image: linear-gradient(#dbfde5, #a8b8fa);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.start .start-content .start-box .start-content-text .gold {
  font-size: 100rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.start .start-content .start-box .start-content-text .price-qb {
  font-size: 30rpx;
}
.start .start-content .start-box .start-btn {
  width: 50%;
  height: 110rpx;
  margin: 200rpx auto 0;
  -webkit-animation-name: scaleDraw;
  /*关键帧名称*/
  -webkit-animation-timing-function: ease-in-out;
  /*动画的速度曲线*/
  -webkit-animation-iteration-count: infinite;
  /*动画播放的次数*/
  -webkit-animation-duration: 5s;
}
@-webkit-keyframes scaleDraw {
  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
0% {
    -webkit-transform: scale(1);
            transform: scale(1);
    /*开始为原始大小*/
}
25% {
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
    /*放大1.1倍*/
}
50% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
75% {
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
}
}
@keyframes scaleDraw {
  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
0% {
    -webkit-transform: scale(1);
            transform: scale(1);
    /*开始为原始大小*/
}
25% {
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
    /*放大1.1倍*/
}
50% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
75% {
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
}
